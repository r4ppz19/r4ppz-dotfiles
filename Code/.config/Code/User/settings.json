{
    // === EXTENSIONS ===
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "redhat.telemetry.enabled": false,
    "explorer.compactFolders": true,

    // === GIT ===
    "git.decorations.enabled": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "git.autofetch": true,
    "git.confirmSync": false,

    // === EDITOR ===
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontFamily": "JetBrainsMono Nerd Font, JetBrains Mono, Fira Code, FiraCode Nerd Font",
    "editor.fontSize": 13,
    "editor.fontLigatures": false,
    "editor.minimap.enabled": false,
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.horizontalScrollbarSize": 8,
    "editor.scrollbar.verticalScrollbarSize": 8,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.guides.bracketPairs": "active",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "solid",
    "editor.lineHighlightBackground": "#3c3836",
    "editor.selectionBackground": "#504945",

    // === WORKBENCH ===
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.preferredDarkColorTheme": "Gruvbox Dark Medium",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "macos-modern",
    "workbench.tree.expandMode": "doubleClick",
    "workbench.editor.enablePreview": true,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.indent": 15,
    "workbench.tips.enabled": false,
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.startupEditor": "none",
    "workbench.list.smoothScrolling": false,
    "workbench.activityBar.location": "bottom",
    "workbench.layoutControl.enabled": false,

    // === TERMINAL ===
    "terminal.integrated.smoothScrolling": true,
    "terminal.background": "#282828",
    "terminal.integrated.fontSize": 13,

    // === UI CUSTOMIZATIONS (Gruvbox Theme) ===
    "workbench.colorCustomizations": {
        "editor.background": "#282828",
        "sideBar.background": "#3c3836",
        "activityBar.background": "#3c3836",
        "actionBar.toggledBackground": "#3c3836",
        "activityBarTop.background": "#3c3836",
        "statusBar.background": "#504945",
        "titleBar.activeBackground": "#3c3836",
        "titleBar.inactiveBackground": "#282828",
        "panel.background": "#3c3836",
        "editorGroupHeader.tabsBackground": "#3c3836",
        "editorGroupHeader.tabsBorder": "#504945",
        "editorGroup.border": "#504945",
        "editorGroup.dropBackground": "#3c3836",
        "editorGroupHeader.noTabsBackground": "#3c3836",
        "editorGroupHeader.border": "#504945",
        "editorGroup.focusedEmptyBorder": "#504945",
        "editorGroup.emptyBackground": "#282828",
        "editorGroupHeader.tabsEmptyBackground": "#282828",
        "tab.activeBackground": "#504945",
        "tab.inactiveBackground": "#282828",
        "tab.inactiveForeground": "#a89984",
        "tab.border": "#504945",
        "tab.activeBorder": "#504945",
        "tab.unfocusedActiveBorder": "#504945",
        "tab.activeBorderTop": "#504945",
        "tab.unfocusedActiveBorderTop": "#504945",
        "tab.hoverBackground": "#504945",
        "tab.unfocusedHoverBackground": "#504945",
        "tab.hoverBorder": "#504945",
        "tab.unfocusedHoverBorder": "#504945",
        "tab.activeModifiedBorder": "#504945",
        "tab.inactiveModifiedBorder": "#504945",
        "tab.unfocusedActiveModifiedBorder": "#504945",
        "tab.unfocusedInactiveModifiedBorder": "#504945",
        "dropdown.background": "#3c3836",
        "input.background": "#504945",
        "input.border": "#665c54",
        "inputOption.activeBackground": "#504945",
        "inputOption.activeBorder": "#665c54",
        "inputOption.activeForeground": "#ebdbb2",
        "button.background": "#fabd2f",
        "button.foreground": "#282828",
        "editorLineNumber.activeForeground": "#d79921",
        "menu.background": "#282828",
        "editorPane.background": "#282828",
        "panel.border": "#504945",
        "sideBar.border": "#504945",
        "scrollbar.shadow": "#282828",
        "editorStickyScroll.border": "#3c3836",
        "editorGutter.background": "#282828",
        "editorGutter.modifiedBackground": "#665c54",
        "editorGutter.addedBackground": "#b8bb26",
        "editorGutter.deletedBackground": "#fb4934",
        "statusBarItem.remoteBackground": "#d79921",
        "focusBorder": "#504945",
        "scrollbarSlider.background": "#504945",
        "scrollbarSlider.activeBackground": "#665c54"
    },

    // === MISC ===
    "zenMode.centerLayout": false,
    "security.workspace.trust.untrustedFiles": "open",
    "markdown-preview-enhanced.enablePreviewZenMode": true,
    "code-runner.clearPreviousOutput": true,
    "workbench.navigationControl.enabled": false,
    "codium.enable": false,
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4",
    "gitlens.graph.layout": "editor",
    "git.openRepositoryInParentFolders": "never",
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "*.sqlite": "default"
    },
    "chat.commandCenter.enabled": false,

    // === FORCE FULLSCREEN AND HIDE UI ===
    "window.newWindowFullscreen": true,
    "window.restoreFullscreen": true,
    "window.titleBarStyle": "native",
    "window.customTitleBarVisibility": "never",
    "window.commandCenter": false,
    "window.density.editorTabHeight": "compact",

    // === CRITICAL FOR WAYLAND/SWAY ===
    "window.enableMenuBarFocus": false,
    "window.decorations": "none",
    // "window.newWindowDimensions": "fullscreen",
    "workbench.statusBar.visible": false,
    "window.menuBarVisibility": "toggle",
    "files.autoSave": "afterDelay"
}